<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.scootling.app"
	version 	= "0.0.1">

	<name>TestAppSc</name>

	<description>
		first App attempt
	</description>

	<author href="http://www.scootling.com"
		email="avai007@gmail.com">
		A V
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icons/icon_i114.png" gap:role="default" />
	

	<!-- iOS requires specific dimensions for icons; classic iPhone screens, Retina
    displays, and iPad screens respectively -->
	<icon src="icons/icon_i57.png" width="57" height="57"/>
	<icon src="icons/icon_i72.png" width="72" height="72"/>
	<icon src="icons/icon_i114.png" width="114" height="114"/>

	<!-- Android requires specific dimensions; ldpi, mdpi, and hdpi respectively -->
	<icon src="icons/icon_a36.png" width="36" height="36"/>
	<icon src="icons/icon_a48.png" width="48" height="48"/>
	<icon src="icons/icon_a72.png" width="72" height="72"/>

	<!-- single splash screen specified for use across all platforms.
    However Multiple splash screen sizes are recommended for iOS -->
	<gap:splash src="splashes/splash768_1004.png" />

	<!-- Permissions given -->

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	
	<!-- Permissions not yet given, switched off -->
	<!--	<feature name="http://api.phonegap.com/1.0/file"/> -->
	
	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->

	<!-- hides status bar at top in iOS -->
	<preference name="fullscreen" value="true" />
	<!-- server pages take over app, all links open in apps webview -->
	<preference name="stay-in-webview" value="true" />
</widget>
